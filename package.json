{
  "name": "@jensmeindertsma/tomato",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "build": "prisma generate && react-router build",
    "clean": "rimraf .react-router app/generated build .eslintcache",
    "database:generate": "prisma generate",
    "database:migrate": "prisma migrate dev",
    "database:reset": "prisma migrate reset",
    "dev": "prisma generate && react-router dev",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint:check": "eslint --cache --max-warnings 0 .",
    "lint:fix": "eslint --cache --fix .",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "prisma generate && react-router typegen && echo 'Generated React Router types' && tsc"
  },
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^6.8.2",
    "@prisma/client": "^6.8.2",
    "@react-router/node": "^7.6.1",
    "@react-router/serve": "^7.6.1",
    "better-sqlite3": "^11.10.0",
    "isbot": "^5.1.28",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@react-router/dev": "^7.6.1",
    "@tailwindcss/vite": "^4.1.8",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "eslint": "^9.28.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "prisma": "^6.8.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
